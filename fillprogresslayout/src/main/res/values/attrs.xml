<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<declare-styleable name="FillProgressLayout">
		<attr name="fpl_backgroundColor" format="color|reference"/>
		<attr name="fpl_progressColor" format="color|reference"/>
		<attr name="fpl_roundedCornerRadius" format="float"/>
		<attr name="fpl_isRounded" format="boolean"/>
		<attr name="fpl_shouldRestart" format="boolean"/>
		<attr name="fpl_progressDuration" format="integer"/>
		<attr name="fpl_progress" format="integer"/>
		<attr name="fpl_progressDirection" format="enum">
			<enum name="left_to_right" value="0"/>
			<enum name="right_to_left" value="1"/>
			<enum name="top_to_bottom" value="2"/>
			<enum name="bottom_to_top" value="3"/>
		</attr>
		<attr name="fpl_gradientMovement" format="boolean"/>
		<attr name="fpl_gradientColors" format="reference" />
		<attr name="fpl_gradientDirection" format="enum">
			<enum name="left_to_right" value="0"/>
			<enum name="right_to_left" value="1"/>
			<enum name="top_to_bottom" value="2"/>
			<enum name="bottom_to_top" value="3"/>
			<enum name="top_left_to_bottom_right" value="4"/>
			<enum name="top_right_to_bottom_left" value="5"/>
			<enum name="bottom_right_to_top_left" value="6"/>
			<enum name="bottom_left_to_top_right" value="7"/>
		</attr>
	</declare-styleable>
	
</resources>